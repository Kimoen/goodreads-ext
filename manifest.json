{
    "manifest_version": 3,
    "name": "Goodreads – Local edition?",
    "version": "0.1",
    "default_locale": "en",
    "description": "Affiche si le livre courant dispose d’une traduction sur Goodreads.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.goodreads.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.goodreads.com/book/*"
            ],
            "js": [
                "content_script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Paramètres Goodreads"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "goodreads-lang-checker@julian.dev"
        }
    }
}